<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F4F4F4">
<include layout="@layout/title_right_left"></include>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
    <LinearLayout
        android:id="@+id/vip_type_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingBottom="20dp"
        android:background="@color/white">
        <TextView
            android:text="选择VIP身份"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:textColor="#333333"
            android:drawableLeft="@mipmap/reg_star_img"
            android:drawablePadding="10dp"
            ></TextView>
        <RadioGroup
            android:id="@+id/vip_group"
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <RadioButton
            android:id="@+id/vip_sup"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="  高级VIP"
                android:textColor="#555555"
            android:checked="true"
            android:button="@drawable/select_check_bg"/>
            <RadioButton
                android:id="@+id/vip_op"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:textColor="#555555"
                android:layout_height="wrap_content"
                android:text="  普通VIP"
                android:button="@drawable/select_check_bg"/>
            <RadioButton
                android:layout_width="0dp"
                android:layout_weight="1"
                android:visibility="invisible"
                android:layout_height="wrap_content"
                android:text="  普通VIP"
                android:button="@drawable/select_check_bg"/>
        </RadioGroup>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/infor_type_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="1dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingBottom="20dp"
        android:background="@color/white">
        <TextView
            android:text="选择信息类型"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:textColor="#333333"
            android:drawableLeft="@mipmap/reg_star_img"
            android:drawablePadding="10dp"
            ></TextView>
        <RadioGroup
            android:id="@+id/infor_group"
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <RadioButton
                android:id="@+id/infor1"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="  全部"
                android:textColor="#555555"
                android:checked="true"

                android:button="@drawable/select_check_bg"/>
            <RadioButton
                android:id="@+id/infor2"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:textColor="#555555"
                android:layout_height="wrap_content"
                android:text="  工程信息"
                android:button="@drawable/select_check_bg"/>
            <RadioButton
                android:id="@+id/infor3"
                android:textColor="#555555"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="  采购信息"
                android:button="@drawable/select_check_bg"/>
        </RadioGroup>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/service_type_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="1dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingBottom="20dp"
        android:background="@color/white">
        <TextView
            android:text="选择服务时长"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:textColor="#333333"
            android:drawableLeft="@mipmap/reg_star_img"
            android:drawablePadding="10dp"
            ></TextView>
        <GridView
            android:id="@+id/gridview"
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:numColumns="3"
            android:scrollbars="none"
            android:verticalSpacing="5dp"
            android:layout_height="wrap_content"></GridView>
        <RadioGroup
            android:id="@+id/service_group"
            android:layout_marginTop="15dp"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <RadioButton
                android:id="@+id/time1"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="  一个月"
                android:textColor="#555555"
                android:checked="true"
                android:button="@drawable/select_check_bg"/>
            <RadioButton
                android:id="@+id/time2"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:textColor="#555555"
                android:layout_height="wrap_content"
                android:text="  三个月"
                android:button="@drawable/select_check_bg"/>
            <RadioButton
                android:id="@+id/time3"
                android:textColor="#555555"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="  半年"
                android:button="@drawable/select_check_bg"/>
        </RadioGroup>
        <RadioGroup
            android:id="@+id/year_group"
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:visibility="gone"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <RadioButton
                android:id="@+id/year"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="  一年"
                android:textColor="#555555"
                android:button="@drawable/select_check_bg"/>
            <RadioButton
                android:layout_width="0dp"
                android:layout_weight="1"
                android:textColor="#555555"
                android:visibility="invisible"
                android:layout_height="wrap_content"
                android:text="  三个月"
                android:button="@drawable/select_check_bg"/>
            <RadioButton
                android:textColor="#555555"
                android:visibility="invisible"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="  半年"
                android:button="@drawable/select_check_bg"/>
            </RadioGroup>
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="1dp"
        android:orientation="horizontal"
        android:paddingRight="10dp"
        android:paddingBottom="15dp"
        android:paddingTop="15dp"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="right"
            android:textColor="#555555"
            android:text="费用:"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/money_text"
            android:layout_width="wrap_content"
            android:gravity="right"
            android:layout_marginLeft="10dp"
            android:textColor="#FF5252"
            android:text="¥320.00"
            android:layout_height="wrap_content" />

    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="15dp"
        android:paddingTop="15dp"
        android:paddingRight="10dp"
        android:paddingLeft="10dp"
        android:layout_marginTop="1dp"
        android:textColor="#333333"
        android:text="选择支付方式"
        android:background="@color/white"/>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:padding="10dp"
                android:background="@color/white">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/wx_img"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="微信支付"
                    android:layout_gravity="center"
                    android:textColor="#555555"
                    android:layout_marginLeft="10dp"
                    android:gravity="left|center"
                   />
                <ImageView
                    android:id="@+id/wx_img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/check_on_vip_img"/>
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:padding="10dp"
                android:background="@color/white">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/zfb_img"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="支付宝支付"
                    android:layout_gravity="center"
                    android:textColor="#555555"
                    android:layout_marginLeft="10dp"
                    android:gravity="left|center"
                    />
                <ImageView
                    android:id="@+id/zfb_img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/check_off_vip_img"/>
            </LinearLayout>
            <TextView
                android:id="@+id/login_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="25dp"
                android:text="立即支付"
                android:textColor="@color/white"
                android:textSize="@dimen/textsize_8"
                android:gravity="center"
                android:background="@drawable/button_title_bg"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:layout_marginBottom="30dp"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>