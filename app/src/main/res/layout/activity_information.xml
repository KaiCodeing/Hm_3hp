<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">
    <include layout="@layout/title_right_left"></include>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
    <TextView
        android:id="@+id/word_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:lineSpacingExtra="3dp"
        android:padding="15dp"
        android:text="文件标题文件标题文件标题文件标题文件标题文件标题文件标题"
        android:textColor="#333333"
        android:textSize="@dimen/textsize_8" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@color/black"></View>

    <View
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="3dp"
        android:background="@color/black"></View>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
            <TextView
                android:id="@+id/city_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#666666"
                android:text="所属地区:"/>
                <TextView
                    android:id="@+id/city"
                    android:layout_marginLeft="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#333333"
                    android:text="山东省济南市"/>
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/time_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#666666"
                    android:text="报名时间:"/>
                <TextView
                    android:id="@+id/time"
                    android:layout_marginLeft="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#333333"
                    android:text="2012-2-2"/>
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/over_time_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#666666"
                    android:text="截止时间:"/>
                <TextView
                    android:id="@+id/over_time"
                    android:layout_marginLeft="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#333333"
                    android:text="2013-2-2"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/jion_layout"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tj_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#666666"
                    android:text="报名条件:"/>
                <TextView
                    android:id="@+id/tj"
                    android:layout_marginLeft="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#333333"
                    android:text="公司完整"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/dl_layout"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/text_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#666666"
                    android:text="招标代理:"/>
                <TextView
                    android:id="@+id/text"
                    android:layout_marginLeft="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#333333"
                    android:text="山东啦啦啦广告公司"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/email_layout"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/fj_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#666666"
                    android:text="附        件:"/>
                <TextView
                    android:id="@+id/fj"
                    android:layout_marginLeft="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/backgroud_title"
                    android:text="XXXx"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#666666"
                    android:layout_marginLeft="10dp"
                    android:text="(点击发送至我的邮箱)"/>
            </LinearLayout>
        </LinearLayout>
        <TextView
            android:id="@+id/add_attention"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="关注"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:paddingRight="15dp"
            android:paddingLeft="15dp"
            android:textColor="@color/backgroud_title"
            android:layout_gravity="right"
            android:background="@drawable/exit_sh_"/>
    </FrameLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:background="#F4F4F4"></View>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="15dp">
            <TextView
                android:text="招标类型"
                android:textColor="#333333"
                android:textSize="@dimen/textsize_8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/type_name"
            android:text="工程信息-类型1"
            android:layout_marginLeft="20dp"
            android:textColor="#333333"
            android:layout_gravity="center"
            android:textSize="@dimen/textsize_7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:background="#F4F4F4"></View>
            <LinearLayout
                android:id="@+id/web_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
    <TextView
        android:text="招标内容"
        android:textColor="#333333"
        android:textSize="@dimen/textsize_8"
        android:layout_width="wrap_content"
        android:padding="15dp"
        android:layout_height="wrap_content" />
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#F4F4F4"></View>
    <com.hemaapp.hm_FrameWork.view.HemaWebView
        android:id="@+id/webview"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

    </com.hemaapp.hm_FrameWork.view.HemaWebView>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/no_vip_layout"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/content_text"
                    android:text="当前您为免费注册用户，无法查看该招标具体信息，成为会员，海量招标信息随意看！！"
                    android:textColor="#666666"
                    android:visibility="gone"
                    android:textSize="@dimen/textsize_7"
                    android:layout_width="wrap_content"
                    android:padding="15dp"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/login_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="25dp"
                    android:text="去购买"
                    android:textColor="@color/white"
                    android:textSize="@dimen/textsize_8"
                    android:gravity="center"
                    android:background="@drawable/button_title_bg"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>