<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include layout="@layout/title_right_left"></include>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/backgroud_title"></View>
    <FrameLayout
        android:id="@+id/vip_layout"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
       >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/project"
                android:layout_width="0dp"
                android:textColor="@color/backgroud_title"
                android:layout_weight="1"
                android:paddingBottom="15dp"
                android:paddingTop="15dp"


                android:layout_height="wrap_content"
                android:text="高级VIP"
                android:gravity="center"/>
            <TextView
                android:id="@+id/purchase"
                android:layout_width="0dp"
                android:textColor="#333333"
                android:layout_weight="1"
                android:paddingBottom="15dp"
                android:paddingTop="15dp"
                android:layout_height="wrap_content"
                android:text="普通VIP"
                android:gravity="center"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginBottom="8dp"
            android:orientation="horizontal">
            <View
                android:id="@+id/view1"
                android:layout_width="0dp"
                android:layout_height="3dp"
                android:layout_weight="1"
                android:layout_marginRight="60dp"
                android:layout_marginLeft="60dp"
                android:background="@color/backgroud_title"></View>
            <View
                android:id="@+id/view2"
                android:layout_width="0dp"
                android:layout_height="3dp"
                android:layout_weight="1"
                android:visibility="invisible"
                android:layout_marginRight="60dp"
                android:layout_marginLeft="60dp"
                android:background="@color/backgroud_title"></View>
        </LinearLayout>
    </FrameLayout>
    <com.hemaapp.hm_FrameWork.view.HemaWebView
        android:id="@+id/webview_aboutwe"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>