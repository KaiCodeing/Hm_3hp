<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">
    <include layout="@layout/title_right_left"></include>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="centerCrop"
        android:background="@mipmap/common_vip_bg"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="30dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="信息类型："
            android:layout_marginLeft="20dp"/>
        <TextView
            android:id="@+id/vip_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="高级会员"
            android:textColor="#333333"
            android:textSize="@dimen/textsize_8"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="5dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="到期时间："
            android:layout_marginLeft="20dp"/>
        <TextView
            android:id="@+id/vip_time"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="2017.12.1"
            android:textColor="#333333"
            android:textSize="@dimen/textsize_8"
            />
        <TextView
            android:id="@+id/xf_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:layout_marginRight="20dp"
            android:paddingRight="20dp"
            android:paddingLeft="20dp"
            android:text="续费"
            android:background="@drawable/xf_sc_bg"
            />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/white_p"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"></View>
    <TextView
        android:id="@+id/buy_angin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="60dp"
        android:text="重新购买"
        android:textColor="@color/white"
        android:textSize="@dimen/textsize_8"
        android:gravity="center"
        android:background="@drawable/button_title_bg"
        android:paddingTop="15dp"
        android:layout_marginTop="40dp"
        android:paddingBottom="15dp"/>
    <TextView
        android:id="@+id/login_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="60dp"
        android:text="申请成为高级会员"
        android:textColor="@color/white"
        android:textSize="@dimen/textsize_8"
        android:gravity="center"
        android:background="@drawable/cjhy_bg"
        android:paddingTop="15dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:paddingBottom="15dp"/>
</LinearLayout>