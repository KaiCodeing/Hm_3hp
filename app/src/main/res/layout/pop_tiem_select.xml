<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#88000000">
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/black"></View>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingRight="30dp"
    android:background="@color/white"
    android:paddingLeft="30dp"
    android:orientation="horizontal">
    <CheckBox
        android:id="@+id/week"
        android:button="@null"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textColor="@drawable/main_text_change"
        android:text="近一周"
        android:background="@null"
        android:padding="15dp"
        android:gravity="center"
        />
    <CheckBox
        android:id="@+id/one_mon"
        android:textColor="@drawable/main_text_change"
        android:layout_width="0dp"
        android:button="@null"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="近一个月"
        android:background="@null"
        android:padding="15dp"
        android:gravity="center"
        />
    <CheckBox
        android:id="@+id/three_mon"
        android:textColor="@drawable/main_text_change"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="近三个月"
        android:button="@null"
        android:padding="15dp"
        android:gravity="center"
        />
</LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="15dp"
        android:background="@color/white"
        android:paddingRight="15dp">
        <TextView
            android:id="@+id/star_time"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/select_time_view"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:hint="查询日期(开始)"
            android:drawableRight="@mipmap/select_time_img"
            android:paddingRight="10dp"
            android:gravity="center"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/time_time_tou_img"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            android:layout_gravity="center"/>
        <TextView
            android:id="@+id/over_time"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/select_time_view"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:paddingRight="10dp"
            android:drawableRight="@mipmap/select_time_img"
            android:hint="查询日期(结束)"
            android:gravity="center"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">
    <TextView
        android:id="@+id/login_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="25dp"
        android:text="完成"
        android:textColor="@color/white"
        android:textSize="@dimen/textsize_8"
        android:gravity="center"
        android:background="@drawable/button_title_bg"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"/>
    <TextView
        android:id="@+id/add_user"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="30dp"
        android:text="重置"
        android:textColor="@color/backgroud_title"
        android:textSize="@dimen/textsize_8"
        android:gravity="center"
        android:background="@drawable/exit_sh_"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"/>
    </LinearLayout>
</LinearLayout>