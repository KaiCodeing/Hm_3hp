<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F4F4F4">
    <include layout="@layout/title_right_left"></include>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@color/white"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_marginLeft="10dp"
            android:src="@mipmap/set_push_img"/>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="消息推送设置"
            android:layout_marginLeft="10dp"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:textColor="#2F2F2F"
            android:layout_gravity="center"
            android:textSize="@dimen/textsize_8" />
            <ImageView
                android:id="@+id/push_img"
                android:src="@mipmap/set_push_on"
                android:layout_width="wrap_content"
                android:layout_marginRight="20dp"
                android:layout_gravity="center"
                android:layout_height="wrap_content" />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/white_p"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"></View>
    <LinearLayout
        android:id="@+id/layout_safely"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@color/white"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_marginLeft="10dp"
            android:src="@mipmap/set_user_anquan"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="账户安全"
            android:layout_marginLeft="10dp"
            android:textColor="#2F2F2F"
            android:layout_gravity="center"
            android:textSize="@dimen/textsize_8" />
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:layout_marginLeft="20dp"
            android:singleLine="true"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:gravity="right"
            android:textColor="#999999"
            android:textSize="@dimen/textsize_8"
            android:drawableRight="@mipmap/re_sanjiao_img"
            android:layout_marginRight="20dp"
            android:drawablePadding="10dp"
            />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/white_p"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"></View>
    <LinearLayout
        android:id="@+id/layout_cache"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@color/white"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_marginLeft="10dp"
            android:src="@mipmap/set_chace_img"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="清理缓存"
            android:layout_marginLeft="10dp"
            android:textColor="#2F2F2F"
            android:layout_gravity="center"
            android:textSize="@dimen/textsize_8" />
        <TextView
            android:id="@+id/cache_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:layout_marginLeft="20dp"
            android:singleLine="true"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:gravity="right"
            android:textColor="#999999"
            android:textSize="@dimen/textsize_8"
            android:drawableRight="@mipmap/re_sanjiao_img"
            android:layout_marginRight="20dp"
            android:drawablePadding="10dp"
            />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/white_p"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"></View>
    <TextView
        android:id="@+id/login_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="35dp"
        android:text="退出"
        android:textColor="@color/backgroud_title"
        android:textSize="@dimen/textsize_8"
        android:gravity="center"
        android:background="@drawable/exit_sh_"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"/>
</LinearLayout>